{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "nitric typescript starter template",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "@nitric/sdk": "0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@types/jest": "^29.5.1",
    "babel-jest": "^29.5.0",
    "dotenv": "^16.0.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "stmux": "^1.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "wait-port": "^1.0.1"
  },
  "scripts": {
    "test": "jest",
    "dev:functions": "nodemon -r dotenv/config ./index.ts",
